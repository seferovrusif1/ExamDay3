@model IEnumerable<ListItemAccessor>
<head>
    <style>
        table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        td, th {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }

    </style>
</head>
<body>

    <h2>Accessories List</h2>
    <h3><a asp-action="Create">Create</a></h3>
    <table>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Description</th>
            <th>ImagePath</th>
            <th>IsDeleted</th>
            <th>Update</th>
            <th>Delete</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td><img src="~/@item.ImagePath" width="80px"></td>
                <td>@item.IsDeleted</td>
                <td><a asp-action="Update" asp-route-id="@item.Id">Update</a></td>
                <td><a asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>
            </tr>
        }

    </table>

</body>


