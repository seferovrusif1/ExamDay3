@model AccessorCreateVM
    <h2>Create Accessor</h2>

<form style="width: 26rem;" method="post" enctype="multipart/form-data">
    <div class="form-outline mb-4">
        <input type="text" id="Title" asp-for="Title" class="form-control" />
        <label class="form-label" >Title</label
            <span asp-validation-for="Title"></span>
    </div>
    <div class="form-outline mb-4">
        <input type="text" id="Description" asp-for="Description" class="form-control" />
        <label class="form-label" >Description</label
            <span asp-validation-for="Description"></span>
    </div>
    <div class="form-outline mb-4">
        <input accept="image/*" type="file" id="ImagePath" asp-for="ImagePath" class="form-control" />
        <label class="form-label" >ImagePath</label
            <span asp-validation-for="ImagePath"></span>
    </div>
 

    <!-- Submit button -->
    <button data-mdb-ripple-init type="submit" class="btn btn-primary btn-block mb-4">Submit</button>
</form>